apiVersion: apps/v1
kind: Deployment
metadata:
  name: freescout
  namespace: {{ freescout_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: freescout
  template:
    metadata:
      labels:
        app: freescout
    spec:
      nodeSelector:
        kubernetes.io/hostname: {{ freescout_node }}
      restartPolicy: Always
      imagePullSecrets:
        - name: ghcr-secret
      containers:
        - name: freescout
          image: ghcr.io/capt-alien/freescout-arm:latest
          imagePullPolicy: Always
          ports:
            - containerPort: {{ freescout_port }}
          env:
            - name: DB_HOST
              value: mariadb.{{ freescout_namespace }}.svc.cluster.local
            - name: DB_NAME
              value: {{ mariadb_db }}
            - name: DB_USER
              value: {{ mariadb_user }}
            - name: DB_PASS
              value: {{ mariadb_password }}
            - name: SITE_URL
              value: http://freescout.{{ freescout_namespace }}.svc.cluster.local
          volumeMounts:
            - mountPath: /data
              name: freescout-data
          resources:
            requests:
              memory: "256Mi"
              cpu: "250m"
            limits:
              memory: "512Mi"
              cpu: "500m"
          livenessProbe:
            httpGet:
              path: /
              port: {{ freescout_port }}
            initialDelaySeconds: 30
            periodSeconds: 10
          readinessProbe:
            httpGet:
              path: /
              port: {{ freescout_port }}
            initialDelaySeconds: 10
            periodSeconds: 5
      volumes:
        - name: freescout-data
          persistentVolumeClaim:
            claimName: freescout-pvc
