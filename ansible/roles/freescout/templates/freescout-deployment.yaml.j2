apiVersion: apps/v1
kind: Deployment
metadata:
  name: freescout
  namespace: freescout
  annotations:
    redeployTimestamp: "{{ lookup('pipe', 'date +%s') }}"
spec:
  replicas: 1
  selector:
    matchLabels:
      app: freescout
  template:
    metadata:
      labels:
        app: freescout
    spec:
      imagePullSecrets:
        - name: ghcr-secret
      nodeSelector:
        kubernetes.io/hostname: ub1
      terminationGracePeriodSeconds: 30
      containers:
        - name: freescout
          image: ghcr.io/capt-alien/freescout-x86:latest
          imagePullPolicy: Always
          ports:
            - containerPort: 80
          env:
            - name: DB_HOST
              value: mariadb.freescout.svc.cluster.local
            - name: DB_NAME
              value: freescout
            - name: DB_USER
              value: freescout
            - name: DB_PASS
              valueFrom:
                secretKeyRef:
                  name: freescout-db-secret
                  key: password
            - name: SITE_URL
              value: http://freescout.freescout.svc.cluster.local
          volumeMounts:
            - mountPath: /var/www/html/storage
              name: freescout-data
          resources:
            requests:
              memory: "256Mi"
              cpu: "250m"
            limits:
              memory: "512Mi"
              cpu: "500m"
          livenessProbe:
            httpGet:
              path: /
              port: 80
            initialDelaySeconds: 30
            periodSeconds: 10
          readinessProbe:
            httpGet:
              path: /
              port: 80
            initialDelaySeconds: 10
            periodSeconds: 5
      volumes:
        - name: freescout-data
          persistentVolumeClaim:
            claimName: freescout-pvc
